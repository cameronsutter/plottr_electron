{
  "name": "plottr",
  "description": "An elegant writing tool that helps organize plotlines",
  "repository": "https://github.com/cameronsutter/plottr_electron.git",
  "private": true,
  "readme": "Copyright 2016-2020 C. Louis S. (Cameron Sutter)",
  "version": "1.9.0",
  "author": {
    "name": "C. Louis S.",
    "email": "cameronsutter0@gmail.com",
    "url": "https://medium.com/@camsutter"
  },
  "main": "bin/main.js",
  "scripts": {
    "start": "NODE_ENV=dev electron .",
    "compile": "node_modules/.bin/webpack",
    "serve": "NODE_ENV=dev node_modules/.bin/webpack",
    "watch": "echo 'do you have fsevents?' && NODE_ENV=dev node_modules/.bin/webpack",
    "createDevLicense": "node bin/main_modules/dev_license.js",
    "changelog": "changelog cameronsutter/plottr_electron all -m > changelog.md",
    "pack": "NODE_ENV=production node_modules/.bin/webpack 1> /dev/null",
    "pack:windows": "node_modules\\.bin\\webpack",
    "dist": "node build/initEnv.js && npm run pack && electron-builder",
    "dist:windows": "node build/initEnv.js && npm run pack:windows && electron-builder",
    "dist:all": "npm run pack && electron-builder -mw",
    "extract-strings": "format-message extract -o locales/en.json \"bin/**/*.js\" \"src/**/*.js\""
  },
  "dependencies": {
    "deep-diff": "^0.3.4",
    "docx": "^2.1.1",
    "dotenv": "^4.0.0",
    "dotenv-stringify": "^1.0.0",
    "electron-json-storage": "^2.0.0",
    "electron-log": "^2.2.17",
    "electron-prompt": "^1.5.1",
    "electron-store": "^5.1.0",
    "electron-updater": "^4.0.14",
    "electron-window-state": "^5.0.3",
    "format-message": "^6.2.1",
    "lodash": "^4.17.11",
    "mixpanel-browser": "^2.29.0",
    "node-machine-id": "^1.1.12",
    "pagedown": "^1.1.0",
    "pretty-date": "^0.2.0",
    "react": "^16.8.6",
    "react-bootstrap": "^0.32.4",
    "react-dom": "^16.8.6",
    "react-modal": "^3.8.1",
    "react-overlays": "^1.2.0",
    "react-proptypes": "^1.0.0",
    "react-redux": "^4.4.10",
    "react-sticky-table": "^4.1.0",
    "react-waypoint": "^9.0.2",
    "react.pure.component": "^1.2.0",
    "reactour": "^1.16.0",
    "redux": "^3.5.2",
    "request": "^2.88.0",
    "rollbar": "^2.7.1",
    "simplemde": "^1.11.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^8.0.6",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "changelog": "^1.4.2",
    "css-loader": "^3.0.0",
    "devtron": "^1.2.1",
    "electron": "^5.0.4",
    "electron-builder": "^21.0.1",
    "electron-devtools-installer": "^2.0.0",
    "electron-notarize": "^0.1.1",
    "electron-reload": "^1.4.0",
    "file-loader": "^0.8.5",
    "format-message-cli": "^6.2.1",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.13.0",
    "url-loader": "^2.0.0",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5"
  },
  "build": {
    "electronVersion": "5.0.4",
    "appId": "com.plottr.app",
    "artifactName": "${productName}-${os}-installer-${version}.${ext}",
    "publish": [
      "github"
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__,tests,powered-test,example,examples,*.d.ts}",
      "!**/node_modules/.bin",
      "!**/*.{o,hprof,orig,pyc,pyo,rbc,md,MD}",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.gitignore,.gitattributes,.editorconfig,.flowconfig,.yarn-metadata.json,.idea,appveyor.yml,.travis.yml,circle.yml,npm-debug.log,.nyc_output,yarn.lock,.yarn-integrity}",
      "!src${/*}",
      "!webpack.config.js",
      "!example*.pltr",
      "!example*.docx",
      "!screenshots"
    ],
    "copyright": "Copyright Â© 2020 C. Louis S. (Cameron Sutter)",
    "productName": "Plottr",
    "fileAssociations": [
      {
        "ext": "pltr",
        "name": "Plottr",
        "description": "An elegant writing tool to organize story plotlines",
        "role": "Editor"
      }
    ],
    "afterSign": "build/notarize.js",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "darkModeSupport": true
    },
    "dmg": {
      "backgroundColor": "#f7f7f7",
      "title": "${productName} Installer",
      "sign": false
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    },
    "nsis": {
      "artifactName": "${productName}-${os}-setup-${version}.${ext}",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
