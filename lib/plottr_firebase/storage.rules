rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /backups/{userId} {
      match /{allPaths=**} {
        allow read, write: if request.auth && request.auth.uid == userId;
      }
    }
    match /images/{userId} {
      match /{allPaths=**} {
        allow read, write: if request.auth && request.auth.uid == userId;
      }
    }
    match /userTemplates/{userId} {
      allow read, write, list: if request.auth && request.auth.uid == userId;
      match /{allPaths=**} {
        allow read, write, list: if request.auth && request.auth.uid == userId;
      }
    }
  }
}
